<header>
  <nav>
    <ul>
      <li><h1><%= link_to "assembly", root_path %><%= link_to "Yard", root_path, class: "yard" %></h1></li>
      <% if can? :create, Snippet %>
      <li><%= link_to "Add Code", new_snippet_path %></li>
      <% end %>
      <li><%= link_to "Code", snippets_path %></li>
      <% if current_user %>
      <li><%= link_to "Logout", logout_path, method: :delete, data: { confirm: "Are you sure?" } %></li>
      <li>Hello, <%= link_to "#{current_user.user_name}", edit_user_path(current_user) %></li>
      <% else %>
      <li><%= link_to "Login", login_path %></li>
      <li><%= link_to "Sign Up", new_user_path %></li>
      <% end %>
    </li>
  </ul>
</nav>
</header>