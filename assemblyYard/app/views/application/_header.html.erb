<header>
  <nav>
    <ul>
      <h1><%= link_to "assemblyYard", root_path %></h1>
      <% if current_user %>
      <li>Hello, <%= current_user.user_name %> <%= link_to "Logout", logout_path, method: :delete, data: { confirm: "Are you sure?" } %></li>
      <% else %>
      <li><%= link_to "Login", login_path %></li>
      <li><%= link_to "Sign Up", new_user_path %></li>
      <% end %>
      <li><%= link_to "Code", snippets_path %>
        <% if can? :create, Snippet %>
        <%= link_to "Add Code", new_snippet_path %>
        <% end %>
      </li>
    </ul>
  </nav>
</header>