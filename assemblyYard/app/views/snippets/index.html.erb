<h1> Most Recent Code </h1>
<% content_for :search do %>
<div class="large-8 small-9 columns">
<div class="search-bar">
	<%= search_form_for @search do |f| %>
	<%= f.text_field :search_terms_cont, class: "radius-left expand", placeholder: "Search Terms" %>
</div>
</div>
<div class="large-4 small-3 columns">
	<div class="search-button">
		<%= f.submit "Search", class: "radius-right button" %>
	</div>
</div>
<% end %>
<% end %>

<% @snippets.all.order("id desc").limit(5).each do |snippet|%>
<div class="index-snippet">
<li><div class="name"><%= link_to snippet.name, snippet %></div></li>
<pre class="language-<%= snippet.category.language %>" rel="<%= snippet.category.language %>"><code class="language-<%= snippet.category.language %>">
	<%= truncate(snippet.contents, length: 100) %>
</code></pre>
<li><div class="language"><div class="tags">Language: </div> <%= snippet.category.language %></div></li>
<li><div class="search-terms"><div class="tags">Search Terms: </div> <%= snippet.search_terms %></div></li>
<li><div class="user"><div class="tags">User: </div> <%= snippet.user.try(:user_name) %></div></li>
</div>
<% end %>
<%= javascript_include_tag 'prism'%>



