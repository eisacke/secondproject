<h3>Your Code</h3>
<%= form_for @snippet do |f| %>
<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :search_terms %>
	<%= f.text_field :search_terms %>
</div>
<div class="field">
	<%= f.label :category_id %>
	<%= f.select(:category_id, @category_options) %>
</div>
<div class="field">
	<%= f.label :contents %><br>
	<%= f.text_area :contents %>
</div>
<div class="actions"><%= f.submit %></div>
<% end %>